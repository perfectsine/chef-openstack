[DEFAULT]
<% node.recipes.each do |recipe| %>
<% if recipe.include? "docker" %>
libvirt_type=qemu
compute_driver = docker.DockerDriver
docker_registry_default_port = 5042
<% break %>
<% end %>
<% if recipe.include? "kvm" %>
libvirt_type=qemu
compute_driver=libvirt.LibvirtDriver
<% break %>
<% end %>
<% end %>